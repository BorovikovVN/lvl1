<Window x:Class="Lvl1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lvl1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*" />
            <ColumnDefinition Width="393*" />
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="/cat.jpg" Height="85" Width="85" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
        <TextBlock Grid.Column="0" Height="30" Width="120" Text="Вывод" Margin="115,0,165,0" VerticalAlignment="Top"></TextBlock>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2">
            <Button Content="Вторая страница" Margin="10 120 10 10" HorizontalAlignment="Right" Height="65" Width="100" Click="Button_Click"></Button>
            <Button Content="Окно" Margin="10" HorizontalAlignment="Right" Height="65" Width="100" Click="Button_Click_1"></Button>
            <Button Margin="10" HorizontalAlignment="Right" Height="65" Width="100"></Button>
        </StackPanel>
    </Grid>
</Window>
